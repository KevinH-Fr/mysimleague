<p style="color: green"><%= notice %></p>

<div class="p-2">

  <%# grouper par comportement de sortie %>
  <h1>
    Comportement base setups
    <button class="btn btn-sm btn-warning m-2" type="button" 
            data-bs-toggle="collapse" data-bs-target="#collapseNewComportementBaseSetup" aria-expanded="false">
      <i class="fa-solid fa-square-plus fa-xl"></i>
    </button>
  </h1>

  <div class="collapse" id="collapseNewComportementBaseSetup">
    <div id="new_comportement_base_setup">
      <%= render partial: "comportement_base_setups/form", locals: { comportement_base_setup: ComportementBaseSetup.new } %>
    </div>
  </div>

  <div id="comportement_base_setups">
    <% @comportement_base_setups.group_by { |setup| [setup.sens, setup.base_setup.parametre] }.each do |group, setups| %>
      <div class="card my-2">
        <h3 class="text-start container-fluid bg-dark p-1 fs-6">
         <%#= group[0] %> 
         <span class="mx-2"> <%= icon_sens_modif(group[0]) %> </span>
           <%= group[1] %>
        </h3>

        <% setups.each do |comportement_base_setup| %>
          <%= render comportement_base_setup %>
        <% end %>
      </div>
    <% end %>
  </div>


</div>


<div class="my-3">
    <%= back_button_setup_dashboard %>
    <%= back_button_root %>
</div>
