<div id="<%= dom_id comportement_base_setup %>">
  <div class="row m-0 p-0">
      <div class="col-10 align-items-center">
        <%= comportement_base_setup.sens %>
        <%= comportement_base_setup.base_setup.parametre %>
        <span class="badge border border-success m-1 p-1"> 
          <%= comportement_base_setup.comportement.nom %>
        </span>      
      </div>
      <div class="col-2 d-flex">
        <%= button_to "", edit_comportement_base_setup_path(comportement_base_setup), method: :post, 
              class: "btn btn-sm btn-outline-secondary fa-solid fa-pen-to-square m-1" %>
        <%= button_to "", comportement_base_setup_path(comportement_base_setup), method: :delete, 
              class: "btn btn-sm btn-outline-danger fa-solid fa-trash m-1" %>
      </div>
    </div>

</div>
