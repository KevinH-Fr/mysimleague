  <div class="card p-2 my-2">

  <%= form_with(model: circuit) do |form| %>
    <% if circuit.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(circuit.errors.count, "error") %> prohibited this circuit from being saved:</h2>

        <ul>
          <% circuit.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-group input-group-sm my-1">
      <%= form.label :nom, class: "input-group-text" %>
      <%= form.text_field :nom, class: "form-control"%>
    </div>

    <div class="input-group input-group-sm my-1">
      <%= form.label :pays, class: "input-group-text" %>
      <%= form.text_field :pays, class: "form-control"%>
    </div>

    <div class="input-group input-group-sm my-1">
      <%= form.label :latitude, class: "input-group-text" %>
      <%= form.text_field :latitude, class: "form-control"%>
    </div>

    <div class="input-group input-group-sm my-1">
      <%= form.label :longitude, class: "input-group-text" %>
      <%= form.text_field :longitude, class: "form-control"%>
    </div>

    <div class="input-group input-group-sm my-1">
      <%= form.label :drapeau, class: "input-group-text" %>
      <%= form.file_field :drapeau, accept: "image/jpeg, image/png, image/avif, image/webp", class:"form-control" %>
    </div>

    <%= custom_submit_button("Circuit") %>

  <% end %>
</div>