<div class="card p-2 my-1">  

  <%= form_with(model: ligue) do |form| %>
    <% if ligue.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(ligue.errors.count, "error") %> prohibited this ligue from being saved:</h2>
        <ul>
          <% ligue.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-group input-group-sm my-2">
      <%= form.label :nom, class: "input-group-text label-colored" %>
      <%= form.text_field :nom, class: "form-control input-colored"%>
    </div>

    <div class="input-group input-group-sm my-2">
      <%= form.label :logo, class: "input-group-text label-colored" %>
      <%= form.file_field :logo, accept: "image/jpeg, image/png", class: "form-control input-colored"%>
    </div>

    <div>
      <%#= form.label :proprietaire, style: "display: block" %>
      <%= form.hidden_field :user_id, value: current_user.id if current_user %>
    </div>

    <div class="row g-2">
      <div class="col-md">
        <div class="input-group input-group-sm">
          <%= form.label :points_initial, "Points départ licence", class: "input-group-text label-colored" %>
          <%= form.text_field :points_initial, class: "form-control input-colored" %>
        </div>
      </div>
      <div class="col-md">
        <div class="form-check form-switch">
          <%= form.label :reglement_defaut, class: "form-check-label label-colored" %>
          <%= form.check_box :reglement_defaut, class: "form-check-input input-colored" %>
        </div>
      </div>
    </div>


    <h4>réseaux</h4>

    <div class="input-group input-group-sm my-2">
      <%= form.label :discord, class: "input-group-text label-colored" %>
      <%= form.text_field :discord, class: "form-control input-colored", type: "url" %>
    </div>

    <div class="input-group input-group-sm my-2">
      <%= form.label :twitch, class: "input-group-text label-colored" %>
      <%= form.text_field :twitch, class: "form-control input-colored", type: "url" %>
    </div>

    <div class="input-group input-group-sm my-2">
      <%= form.label :twitter, class: "input-group-text label-colored" %>
      <%= form.text_field :twitter, class: "form-control input-colored", type: "url" %>
    </div>

    <div class="input-group input-group-sm my-2">
      <%= form.label :instagram, class: "input-group-text label-colored" %>
      <%= form.text_field :instagram, class: "form-control input-colored", type: "url" %>
    </div>

    <div class="input-group input-group-sm my-2">
      <%= form.label :youtube, class: "input-group-text label-colored" %>
      <%= form.text_field :youtube, class: "form-control input-colored", type: "url" %>
    </div>

    <div class="input-group input-group-sm my-2">
     <%= form.label :tiktok, class: "input-group-text label-colored" %>
      <%= form.text_field :tiktok, class: "form-control input-colored", type: "url" %>
    </div>

    <div class="my-2 custom-timezone-select">
      <span><%= "Timezone" %></span>
      <span class="truncate-container"> <%= form.time_zone_select :time_zone %> </span>
    </div>

        
    <%= custom_submit_button("Ligue") %>

  <% end %>
</div>
