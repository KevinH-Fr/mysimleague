    </div>

    <div>
      <%#= form.label :proprietaire, style: "display: block" %>
      <%= form.hidden_field :user_id, value: current_user.id if current_user %>
    </div>

    <div class="row g-2">
      <div class="col-md">
        <div class="input-group input-group-sm">
          <%= form.label :points_initial, "Points dÃ©part licence", class: "input-group-text label-colored" %>
          <%= form.text_field :points_initial, class: "form-control input-colored" %>
        </div>
      </div>
      <div class="col-md">
        <div class="form-check form-switch">
          <%= form.label :reglement_defaut, class: "form-check-label label-colored" %>
          <%= form.check_box :reglement_defaut, class: "form-check-input input-colored" %>
        </div>
      </div>
    </div>

    <div class="my-2">
      <span><%= "Timezone" %></span>
