<div data-controller="scroll" data-action="click->scroll#scroll" data-scroll-target="target-scroll-id">

  <div class="card-with-effect">
    <h4 class="text-center">Parieurs</h4>

    <div class="text-center">
      <%# selection de l'annÃ©e %>
      <% annees_paris.each do |annee| %>
        <%= button_to annee, display_parieurs_annee_home_index_path, params: { annee: annee }, class: "btn btn-sm btn-warning m-1" %>
      <% end %>
    </div>

    <% if @annee %>
      <% somme_paris_user(@annee, User.all).each do |user_id, data| %>
        <div class="d-flex align-items-center justify-content-center my-1">
          <%= badge_score_position(data[:rank]) %>
          <div class="equipe-banner-wrapper d-flex align-items-center bg-secondary text-light fw-bold rounded px-2" style="width: 100%; max-width: 300px;">
            <%= link_to user_path(user_id), class: "no-underline text-light" do %>
              <%= image_tag(User.find(user_id).webp_variant, class: "mini-profile-pic me-1") %>
              <%= User.find(user_id).nom %>
            <% end %>
          </div>
          
          <div style="min-width: 80px;">
            <%= badge_score_position(data[:sum]) %>
          </div>

        </div>
      <% end %>
      
    <% end %>

  </div>

</div>