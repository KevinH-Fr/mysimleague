<hr>

<h4 class="text-center mt-2"> Activités récentes </h4>
    <div class="p-2">

        <% @feeds.each do |feed| %>
            <%= link_to feed_path(feed), class: "no-underline text-dark" do %>
                <div class="card record-with-effect"> 
                    <div class="row p-1">
                        <div class="col-2 d-flex align-items-center justify-content-center">
                            <%= feed_icon(feed) %>
                            <%#= feed.class %>
                        </div>
                        <div class="col-10">
                            <%= feed_label(feed) %>
                            <span> edited </span>
                            <small class="time-ago"> <%= time_ago_in_words(feed.updated_at) %> ago </small> 
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
