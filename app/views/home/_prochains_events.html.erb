            <strong><%= event.division.saison.ligue.nom %> </strong> 
            <strong><%= event.division.nom %> </strong> 

            NÂ°<strong> <%= event.numero %> </strong>
            <strong> <%= event.circuit.short_name %> </strong>
            <%= local_time event.horaire, format: :short %> 

