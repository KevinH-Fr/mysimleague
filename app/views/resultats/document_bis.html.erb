
<head>
  <meta charset="UTF-8">
  <title>Document</title>
</head>

<%= stylesheet_link_tag "document" %>


<div id="captureContainer" class="doc-background my-2" style="width: 600px; margin: 0 auto;">

  <body>

  <%= render partial: "documents/entete",  locals: { titre: "RÃ©sultats" } %>

    <%= cl_image_tag(@event.division.saison.ligue.logo.url, 
          :class => "position-relative rounded m-0 p-0 img-fluid",
          :style => "width: 100px;") if @event.division.saison.ligue.logo.present? %>

<%# if @event.division.saison.ligue.logo.attached? %>
  <%# cloudinary_url = Cloudinary::Utils.cloudinary_url(@event.division.saison.ligue.logo.key, 
                                                      :secure => true, 
                                                      :expires_at => (Time.now + 1.hour)) %>

  <%#= cloudinary_url %>

  <%#= cl_image_tag cloudinary_url, 
              :class => "position-relative rounded m-0 p-0 img-fluid",
              :style => "width: 100px;" %>

    <%#= tableau data resultats %>
        
    <table style="margin-left:auto;margin-right:auto">
      <tbody>
        <% @resultats.each do |resultat| %>
          <% nom = User.find(resultat.association_user.user_id).nom %>
          <% equipe = resultat.equipe %>

          <tr>
            <td>
              <% if resultat.dotd == true %>
                <%#= image_tag asset_url('/images/dotd_gold.png'), style: "width: 28px; margin-top: 4px; margin-left: 2px;" %> 
              <% end %>
            </td>
            <td>
              <div class="col_pos_new rounded d-flex align-items-center justify-content-center">
                <%= resultat.course %> 
              </div>
            </td>

            <td>
              <div class="img-banniere-doc">
                <%#= equipe_banner_with_pilote_document(equipe, nom) %>               
              </div>  
            </td>

            <td>
              <div class="col_pos_new rounded d-flex align-items-center justify-content-center">
                 <%= resultat.score %> 
              </div>
            </td>
            <td style= "width: 28px; margin-top: 4px;">
                <% if resultat.mt == true %>
                  <%#= image_tag asset_url('/images/mt_violet.png'), style: "max-width: 100%; max-height: 100%;" %>
                <% end %>
            </td>
          </tr>
        <% end %> 
      </tbody>  
    </table>

  </body>

  <br><br>

</div>

<hr>

