
<div class="text-center p-2 mt-4">

    <% stats = user_resultats_stats(@user, @user_compare) %>
    <% if stats.present? %>

        <div class="badge bg-dark my-2 fs-6">
            nb courses <%= @user.nom %>: <%= stats[:user_stats][:nb_courses] %> <br>
        </div>

        <% if @user_compare %>
            <div class="badge bg-dark my-2 fs-6">
                nb courses  <%= @user_compare.nom %>: <%= stats[:user_compare_stats][:nb_courses] %> <br>  
            </div>
        <% end %>

        <table class="table table-striped table-dark text-center" style="width: 100%; margin: 0 auto;">
            <thead class="table-dark">
                <th>  </th>
                <% if @user_compare %>
                    <th colspan=2> nb</th>
                    <th colspan=2> % </th>
                <% else %>
                    <th class="text-center"> nb</th>
                    <th class="text-cebter"> %</th>
                <% end %>
            </thead>

            <% if @user_compare %>
                <thead>
                    <th></th>
                    <th style="white-space: nowrap;"><%= @user.short_name %></th>
                    <th style="white-space: nowrap;"><%= @user_compare.short_name %></th>
                    <th style="white-space: nowrap;"><%= @user.short_name %> </th>
                     <th style="white-space: nowrap;"> <%= @user_compare.short_name %> </th>
                </thead>
            <% end %>
                        
            <tbody>
                <tr>
                    <td>Vict.</td>
                    <% if @user_compare %>
                        <td> <%= stats[:user_stats][:nb_victoires] %>  </td>
                        <td> <%= stats[:user_compare_stats][:nb_victoires] %>  </td>
                        <td> <%= stats[:user_stats][:tx_victoires].to_i %>  </td>
                        <td> <%= stats[:user_compare_stats][:tx_victoires].to_i %>  </td>

                    <% else %>
                        <td> <%= stats[:user_stats][:nb_victoires].to_i %>  </td>
                        <td> <%= stats[:user_stats][:tx_victoires] .to_i%>  </td>
                    <% end %>                    
                </tr>

                <tr>
                    <td>Pod.</td>
                    <% if @user_compare %>
                        <td> <%= stats[:user_stats][:nb_podiums] %>  </td>
                        <td> <%= stats[:user_compare_stats][:nb_podiums] %>  </td>
                        <td> <%= stats[:user_stats][:tx_podiums].to_i %>  </td>
                        <td> <%= stats[:user_compare_stats][:tx_podiums].to_i %>  </td>
                    <% else %>
                        <td> <%= stats[:user_stats][:nb_podiums] %>  </td>
                        <td> <%= stats[:user_stats][:tx_podiums].to_i %>  </td>
                    <% end %>
                </tr>

                <tr>
                    <td>Top5</td>
                    <% if @user_compare %>
                        <td> <%= stats[:user_stats][:nb_top5] %>  </td>
                        <td> <%= stats[:user_compare_stats][:nb_top5] %>  </td>
                        <td> <%= stats[:user_stats][:tx_top5].to_i %>  </td>
                        <td> <%= stats[:user_compare_stats][:tx_top5].to_i %>  </td>
                    <% else %>
                        <td> <%= stats[:user_stats][:nb_top5] %>  </td>
                        <td> <%= stats[:user_stats][:tx_top5].to_i %>  </td>
                    <% end %>
                </tr>

                <tr>
                    <td>Top10</td>
                    <% if @user_compare %>
                        <td> <%= stats[:user_stats][:nb_top10] %>  </td>
                        <td> <%= stats[:user_compare_stats][:nb_top10] %>  </td>
                        <td> <%= stats[:user_stats][:tx_top10].to_i %>  </td>
                        <td> <%= stats[:user_compare_stats][:tx_top10].to_i %>  </td>
                    <% else %>
                        <td> <%= stats[:user_stats][:nb_top10] %>  </td>
                        <td> <%= stats[:user_stats][:tx_top10].to_i %>  </td>
                    <% end %>
                </tr>

            </tbody>
        </table>

    <% end %>

</div>

