
<%= turbo_stream.append :friends do %>
    <%= render @friends %>
<% end %>

<%= turbo_stream.replace :pagination do %>
    <% if @pagy.next.present? %>
        <%= turbo_frame_tag :pagination, loading: :lazy, 
            src: friends_path(format: :turbo_stream, page: @pagy.next) %>
    
    <% end %>
<% end %>


