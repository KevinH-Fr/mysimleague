<h1 class="text-center m-2">Setup Dashboard</h1>


<div class="p-2 mt-2">

    <% if current_user && current_user.admin %>
        <div class="card bg-dark my-2 p-2">
            <div class="grid text-center">
                <%= menus_admin_links %> <br>   
            </div>
        </div>
    <% end %>

    <div class="card bg-dark">    
        <div class="d-flex justify-content-evenly m-2">

            <%= link_to "setups", setups_path, class: "btn btn-outline-primary w-25 mx-1" %>   

            <button class="btn btn-outline-success w-25" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_correcteur" aria-expanded="false">
                <span> correcteur</span>
            </button>

            <%= link_to "Image 3D", model3d_path, class: "btn btn-outline-warning w-25 mx-1" %>
        </div>
    </div>
            
    <div class="collapse" id="collapse_correcteur">

        <div class="card bg-dark">
            correcteur
            <%= render  "correcteur" %>

        </div>
    </div>

    <div class="my-3">
        <%= back_button_root %>
    </div>


</div>