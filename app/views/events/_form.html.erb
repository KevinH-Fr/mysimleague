<div class="card record-with-effect m-0 my-1 p-2">  

  <%= form_with(model: event) do |form| %>
    <% if event.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
          <% event.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-group input-group-sm my-2">
      <%= form.label :circuit_id, class: "input-group-text" %>
      <%= form.collection_select :circuit_id, Circuit.all, :id, :nom,
        { include_blank: 'Select a circuit' }, class: "form-select" %>
    </div>

    <%= form.hidden_field :division_id, value: session[:division] %>

    <div class="row g-2">
      <div class="col-md">
        <div class="input-group input-group-sm my-2">
          <%= form.label :horaire, class: "input-group-text" %>
          <%= form.datetime_field :horaire, class: "form-control"%>
        </div>
      </div>

      <div class="col-md">
        <div class="input-group input-group-sm my-2">
          <%= form.label :numero, class: "input-group-text" %>
          <%= form.number_field :numero, class: "form-control"%>
        </div>
      </div>
    </div>

    <%= custom_submit_button("Event") %>

  <% end %>
</div>