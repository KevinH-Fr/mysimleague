        <div class="badge bg-light text-dark"> <%= parametre_setup.formatted_val %>  </div>            
      </div>
      <div class="col-2 text-end">
        <%= button_to edit_parametre_setup_path(parametre_setup), method: :post, 
              class: "btn btn-sm p-0" do %>
          <i class= "fa fa-xl fa-pen-square ms-1 text-light"></i>
        <% end %>  
      </div>
    </div>

