<div class="card p-2 my-1">  

  <%= form_with(model: article) do |form| %>
    <% if article.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
          <% article.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :titre, style: "display: block" %>
      <%= form.text_field :titre %>
    </div>

    <div>
      <%= form.label :content, style: "display: block" %>
      <%= form.text_area :content %>
    </div>

    <div>
      <%= form.label :montant, style: "display: block" %>
      <%= form.text_field :montant %>
    </div>

    <div>
      <%= form.label :abonnement, style: "display: block" %>
      <%= form.check_box :abonnement %>
    </div>

    <div>
      <%= form.label :niveau, style: "display: block" %>
      <%= form.text_field :niveau %>
    </div>

    <div>
      <%= form.label :bonus_paris, style: "display: block" %>
      <%= form.text_field :bonus_paris %>
    </div>

    <div class="field">
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>


    <div class="my-2">
      <%= form.submit %>
    </div>
  <% end %>
</div>