
<div id="<%= dom_id presence %>">

  <div class="card record-with-effect my-2 p-1">  

    <div class="row align-items-center">
      <div class="col">
        <strong>  <%= presence.association_user.user.nom %> </strong>
                <%= boolean_icon(presence.status) %>

      </div>

      <div class="col d-flex align-item-center  justify-content-end">

        <% if current_user && verif_propriete_presence(current_user, presence.association_user_id) %>

            <%= button_to "", edit_presence_path(presence), method: :post, 
                  class: "btn btn-sm btn-secondary fa-solid fa-pen-to-square me-1" %>
            <%= button_to "", presence, method: :delete, 
                  class: "btn btn-sm btn-danger fa-solid fa-trash me-1",
                  data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
          
        <% end %>
      </div>
    </div>

  </div>
</div>